@using Foxic.Business.ViewModels.AreaViewModels.CollectionVM;
@model CollectionCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4 style="margin:30px 0px 20px 300px">Collection</h4>
<hr />
<div class="row" style="margin-left:350px">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CollectionName" class="control-label">CollectionName</label>
                <input asp-for="@Model.CollectionName" class="form-control" />
                <span asp-validation-for="@Model.CollectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="control-label">Image</label>
                <input asp-for="@Model.Image" class="form-control" />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section scripts{
    <partial name="_ValidationPartial"></partial>
}

